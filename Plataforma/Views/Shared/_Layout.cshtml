<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Plataforma.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <!-- Font Poppins -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Administrador")) 
        {
            <partial name="~/Views/Shared/Headers/_AdministradorHeader.cshtml" />
        }
        else if (User.IsInRole("Profesor"))
        {
            <partial name="~/Views/Shared/Headers/_ProfesorHeader.cshtml" />
        }
        else if (User.IsInRole("Estudiante"))
        {
            <partial name="~/Views/Shared/Headers/_EstudianteHeader.cshtml" />
        }
    }
    else
    {
        <partial name="~/Views/Shared/Headers/_DefaultHeader.cshtml" />
    }
    <main role="main">
        @RenderBody()
    </main>

    @* <footer class="border-top footer text-muted"> *@
    @*     <div class="container"> *@
    @*         &copy; 2025 - Plataforma - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@
    <script src="https://kit.fontawesome.com/d86e47d8d1.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
