@{
    ViewData["Title"] = "Mis Cursos";
    Layout = "_Layout";
}
@model Plataforma.Models.Estudiantes.MisCursosViewModel;

<link rel="stylesheet" href="~/css/inicio/miscursos.css" asp-append-version="true" />

<div class="page-container">
    <h1 class="page-title">Mis Cursos</h1>

    @if (Model.cursos != null && Model.cursos.Any())
    {
        <div class="course-list-grid">
            @foreach (var curso in Model.cursos)
            {
                <div class="course-card-item default-course-item">
                    @* Added default-course-item for general styling *@
                    <div class="course-card-image-wrapper">
                        @if (!string.IsNullOrEmpty(curso.ImageUrl))
                        {
                            <img src="@curso.ImageUrl" alt="Imagen del curso @curso.Nombre" class="course-card-image" />
                        }
                        else
                        {
                            <img src="~/images/default-course-placeholder.jpg" alt="No hay imagen disponible" class="course-card-image placeholder-image" />
                        }
                    </div>
                    <div class="course-card-content">
                        <h3 class="course-card-title">@curso.Nombre</h3>
                    </div>

                    <a asp-controller="curso" asp-action="Index" asp-route-cursoId="@curso.CursoId" class="access-button">
                        Ir al Curso
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-courses-message">
            <p>Aún no estás inscrito en ningún curso. ¡Explora nuestros <a asp-controller="Cursos" asp-action="Cursos">cursos disponibles</a>!</p>
        </div>
    }
</div>

<script src="~/js/inicio/miscursos.js" asp-append-version="true"></script>