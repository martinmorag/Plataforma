@{
    ViewData["Title"] = "Agregar profesor";
    Layout = "_Layout";
}
@model Plataforma.Models.Administracion.AdministracionViewModel

<link rel="stylesheet" href="~/css/administrador/profesores/agregar.css" asp-append-version="true" />



<div class="container-custom">
    <h1 class="page-title">Agregar Profesor</h1> 

    <hr /> 

    <div>
        <form asp-controller="Profesores" asp-action="Create" method="post" class="app-form">
            @* Renamed class for general forms *@
            <div asp-validation-summary="ModelOnly" class="text-danger-summary"></div> @* Specific class for summary validation *@

            <div class="form-group">
                <label asp-for="RegistroProfesor.Nombre" class="control-label"></label> @* Applied class *@
                <input asp-for="RegistroProfesor.Nombre" class="form-control"> @* Applied class *@
                <span asp-validation-for="RegistroProfesor.Nombre" class="text-danger"></span> @* Applied class *@
            </div>
            <div class="form-group">
                <label asp-for="RegistroProfesor.Apellido" class="control-label"></label> @* Applied class *@
                <input asp-for="RegistroProfesor.Apellido" class="form-control"> @* Applied class *@
                <span asp-validation-for="RegistroProfesor.Apellido" class="text-danger"></span> @* Applied class *@
            </div>
            <div class="form-group">
                <label asp-for="RegistroProfesor.Email" class="control-label"></label> @* Applied class *@
                <input asp-for="RegistroProfesor.Email" class="form-control"> @* Applied class *@
                <span asp-validation-for="RegistroProfesor.Email" class="text-danger"></span> @* Applied class *@
            </div>
            <div class="form-group">
                <label asp-for="RegistroProfesor.Password" class="control-label">Contraseña</label> @* Applied class *@
                <input asp-for="RegistroProfesor.Password" class="form-control" type="password" />
                <span asp-validation-for="RegistroProfesor.Password" class="text-danger"></span> @* Applied class *@
            </div>
            <div class="form-group">
                <label asp-for="RegistroProfesor.ConfirmPassword" class="control-label">Confirmar contraseña</label> @* Applied class *@
                <input asp-for="RegistroProfesor.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="RegistroProfesor.ConfirmPassword" class="text-danger"></span> @* Applied class *@
            </div>
            <div>
                <input type="submit" value="Agregar" class="btn btn-primary" /> @* Used standard btn classes *@
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}